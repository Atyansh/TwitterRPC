<project name="ATM" default="ATM" basedir=".">
<description>Project 3</description>

<property name="src" location="src" />
<property name="gen" location="gen-java" />
<property name="build" location="build" />
<property name="cpath" location="/usr/share/java/thrift.jar:/usr/local/lib/slf4j-api-1.7.10.jar" />

<target name="init">
<tstamp />
<mkdir dir="${build}"/>
</target>

<target name="compile" depends="init">
<javac srcdir="${gen}" destdir="${build}" classpath="${cpath}" >  
<compilerarg value="-Xlint:deprecation"/> 
</javac>
<javac srcdir="${src}" destdir="${build}" classpath="${cpath}:${gen}" >   
<compilerarg value="-Xlint:deprecation"/> 
</javac>
</target>

<target name="ATM" depends="compile">
<jar jarfile="ATMServer.jar" basedir="${build}">
    <manifest>
     <attribute name="Main-Class" value="edu.ucsd.cse124.ATMServer"/>
    </manifest>
</jar>
</target>

<target name="clean">
<delete dir="${build}" />
<delete file="ATMServer.jar" />
</target>

</project>
